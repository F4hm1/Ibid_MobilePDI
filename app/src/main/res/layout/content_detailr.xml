<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.ibidsera.view.activity.MainActivity">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Stock Management"
                android:textSize="32sp"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textColor="@color/colorAccent"/>

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:text="Back"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"/>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/table_detailr"
                        android:layout_width="1800dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:stretchColumns="0">

                        <TableRow
                            android:background="@drawable/cell_shape_th"
                            android:gravity="center">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Unit" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Cabang" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Nopol" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Merk" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                style="@style/FontTableHead"
                                android:text="Type" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Tahun" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Penggerak" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                style="@style/FontTableHead"
                                android:text="Pemilik" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Expedisi" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Tgl In" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Lama In" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Tgl Sold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Tgl Out" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Ikut Lelang" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                style="@style/FontTableHead"
                                android:text="Case" />

                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>