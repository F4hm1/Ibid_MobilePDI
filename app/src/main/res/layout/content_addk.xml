<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.ibidsera.view.activity.MainActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pemeriksaan Unit Masuk"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="16dp"
                    android:textSize="24sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height= "1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="NO POLISI"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="MERK"/>
                        <Spinner
                            style="@style/SpinnerEditForm">

                        </Spinner>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="SERI"/>
                        <Spinner
                            style="@style/SpinnerEditForm">

                        </Spinner>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="SILINDER"/>
                        <Spinner
                            style="@style/SpinnerEditForm">

                        </Spinner>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="GRADE"/>
                        <Spinner
                            style="@style/SpinnerEditForm">

                        </Spinner>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="SUB GRADE"/>
                        <Spinner
                            style="@style/SpinnerEditForm">

                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="TRANSMISI"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="TAHUN"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="KM"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="NAMA PEMILIK"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="FUEL DIPERIKSA"/>
                        <Spinner
                            style="@style/SpinnerEditForm">

                        </Spinner>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="KONDISI CAT BODY"/>
                        <Spinner
                            style="@style/SpinnerEditForm">

                        </Spinner>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bukti Serah Terima"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="16dp"
                    android:textSize="24sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height= "1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="Tanggal Pemeriksaan"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="Jam"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp">

                            </Spinner>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"/>
                            <Spinner
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:layout_marginRight="16dp">

                            </Spinner>
                        </LinearLayout>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="Nama Pengemudi"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical">
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="Alamat Pengemudi"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="Kota"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="Telepon"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kelengkapan Kondisi Komponen"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="16dp"
                    android:textSize="24sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height= "1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:stretchColumns="0">

                    <TableRow
                        android:background="@drawable/cell_shape_th"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            style="@style/FontTableHead"
                            android:text="No" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height= "match_parent"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            style="@style/FontTableHead"
                            android:text="Nama Komponen" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height= "match_parent"
                            android:background="@color/colorPrimary" />

                        <TableLayout>
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    style="@style/FontTableHead"
                                    android:layout_span="3"
                                    android:text="Kondisi" />
                            </TableRow>
                            <TableRow>
                                <CheckBox
                                    android:id="@+id/checkboxB"
                                    android:text="B   " android:theme="@style/WhiteCheck"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height= "match_parent"
                                    android:background="@color/colorPrimary" />
                                <CheckBox
                                    android:id="@+id/checkboxR"
                                    android:text="R   " android:theme="@style/WhiteCheck"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height= "match_parent"
                                    android:background="@color/colorPrimary" />
                                <CheckBox
                                    android:id="@+id/checkboxT"
                                    android:text="T   " android:theme="@style/WhiteCheck"/>
                            </TableRow>
                        </TableLayout>
                    </TableRow>
                    <TableRow
                    android:background="@drawable/cell_shape_tr_odd"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/no"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            style="@style/FontTable"
                            android:text="1" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height= "match_parent"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/nama_komponen"
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            style="@style/FontTable"
                            android:text="STARTER / IGNITION SYSTEM" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height= "match_parent"
                            android:background="@color/colorPrimary" />

                        <TableLayout>
                            <TableRow>
                                <CheckBox
                                    android:text="B   "/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height= "match_parent"
                                    android:background="@color/colorPrimary" />
                                <CheckBox android:text="R   "/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height= "match_parent"
                                    android:background="@color/colorPrimary" />
                                <CheckBox android:text="T   "/>
                            </TableRow>
                        </TableLayout>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="16dp"
                    android:textSize="24sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height= "1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            style="@style/FontTextViewForm"
                            android:text="Catatan"/>
                        <EditText
                            style="@style/SpinnerEditForm"
                            android:background="@drawable/edittext_style"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="16dp"
                        android:text="Save"
                        android:background="@drawable/button_style"
                        android:textColor="@color/colorPrimary"/>
                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="16dp"
                        android:background="@drawable/button2_style"
                        android:text="Cancel" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:id="@+id/background_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background ="@color/transparent">
        <com.github.rahatarmanahmed.cpv.CircularProgressView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cpv_thickness="10dp"
            android:layout_centerInParent="true"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />
    </RelativeLayout>
</RelativeLayout>