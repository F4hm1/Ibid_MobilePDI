<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.ibidsera.view.activity.MainActivity">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemeriksaan Unit Masuk"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nopol_title"
                        style="@style/FontTextViewForm"
                        android:text="NO POLISI"/>
                    <AutoCompleteTextView
                        android:id="@+id/nopol"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="MERK"/>
                    <Spinner
                        android:id="@+id/merk"
                        style="@style/SpinnerEditForm"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="SERI"/>
                    <Spinner
                        android:id="@+id/seri"
                        style="@style/SpinnerEditForm"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="SILINDER"/>
                    <Spinner
                        android:id="@+id/silinder"
                        style="@style/SpinnerEditForm"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="GRADE"/>
                    <Spinner
                        android:id="@+id/grade"
                        style="@style/SpinnerEditForm"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="SUB GRADE"/>
                    <Spinner
                        android:id="@+id/sub_grade"
                        style="@style/SpinnerEditForm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="TRANSMISI"/>
                    <EditText
                        android:id="@+id/transmisi"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="TAHUN"/>
                    <EditText
                        android:id="@+id/tahun"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"
                        android:inputType="number"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="KM"/>
                    <EditText
                        android:id="@+id/km"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="NAMA PEMILIK"/>
                    <EditText
                        android:id="@+id/nama_pemilik"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="FUEL DIPERIKSA"/>
                    <Spinner
                        android:id="@+id/fuel"
                        style="@style/SpinnerEditForm"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="KONDISI CAT BODY"/>
                    <Spinner
                        android:id="@+id/cat"
                        style="@style/SpinnerEditForm"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bukti Serah Terima"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="Tanggal Pemeriksaan"/>
                    <EditText
                        android:id="@+id/tgl_pemeriksaan"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="Jam"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/jam"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"/>
                        <Spinner
                            android:id="@+id/menit"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginRight="16dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/nama_title"
                        style="@style/FontTextViewForm"
                        android:text="Nama Pengemudi"/>
                    <EditText
                        android:id="@+id/nama_pengemudi"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/alamat_title"
                        style="@style/FontTextViewForm"
                        android:text="Alamat Pengemudi"/>
                    <EditText
                        android:id="@+id/alamat_pengemudi"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                    <TextView
                        android:id="@+id/kota_title"
                        style="@style/FontTextViewForm"
                        android:text="Kota"/>
                    <EditText
                        android:id="@+id/kota"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                    <TextView
                        android:id="@+id/telepon_title"
                        style="@style/FontTextViewForm"
                        android:text="Telepon"/>
                    <EditText
                        android:id="@+id/telepon"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"
                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelengkapan Kondisi Komponen"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />
            <TableLayout
                android:id="@+id/table_addm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:stretchColumns="0">

                <TableRow
                    android:background="@drawable/cell_shape_th"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/FontTableHead"
                        android:text="No" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height= "match_parent"
                        android:background="@color/colorPrimary" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        style="@style/FontTableHead"
                        android:text="Nama Komponen" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height= "match_parent"
                        android:background="@color/colorPrimary" />
                    <TableLayout>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                style="@style/FontTableHead"
                                android:layout_span="3"
                                android:text="Kondisi" />
                        </TableRow>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height= "2dp"
                            android:background="@color/colorPrimary" />
                        <TableRow>
                            <CheckBox
                                android:id="@+id/checkboxB"
                                android:text="B   " android:theme="@style/WhiteCheck"/>
                            <View
                                android:layout_width="2dp"
                                android:layout_height= "match_parent"
                                android:background="@color/colorPrimary" />
                            <CheckBox
                                android:id="@+id/checkboxR"
                                android:text="R   " android:theme="@style/WhiteCheck"/>
                            <View
                                android:layout_width="2dp"
                                android:layout_height= "match_parent"
                                android:background="@color/colorPrimary" />
                            <CheckBox
                                android:id="@+id/checkboxT"
                                android:text="T   " android:theme="@style/WhiteCheck"/>
                        </TableRow>
                    </TableLayout>
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="Catatan"/>
                    <EditText
                        android:id="@+id/catatan"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="Pool Ibid Cabang"/>
                    <EditText
                        android:id="@+id/pool"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="Case"/>
                    <EditText
                        android:id="@+id/cases"
                        android:hint="BUY BACK / WANPRES"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemeriksaan Kerusakan"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Sedan"
                        style="@style/FontTextViewForm"/>
                    <ImageView
                        android:id="@+id/ibid_sedan"
                        android:src="@drawable/ibid_sedan"
                        android:layout_width="250dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Minibus"
                        style="@style/FontTextViewForm"/>
                    <ImageView
                        android:id="@+id/ibid_niaga"
                        android:src="@drawable/ibid_niaga"
                        android:layout_width="250dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanda Tangan"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Pihak Ibid"
                        style="@style/FontTextViewForm"/>
                    <ImageView
                        android:id="@+id/signature1"
                        android:layout_width="220dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/canvas_style"
                        android:clickable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:text="Pihak Customer"
                        style="@style/FontTextViewForm"/>
                    <ImageView
                        android:id="@+id/signature2"
                        android:layout_width="220dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/canvas_style"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="16dp"
                    android:text="Save"
                    android:background="@drawable/button_style"
                    android:textColor="@color/colorPrimary"/>
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="16dp"
                    android:background="@drawable/button2_style"
                    android:text="Cancel" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/background_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background ="@color/transparent">
        <com.github.rahatarmanahmed.cpv.CircularProgressView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cpv_thickness="10dp"
            android:layout_centerInParent="true"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />
    </RelativeLayout>
</RelativeLayout>