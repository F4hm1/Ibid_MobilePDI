<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.ibidsera.view.activity.MainActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Stock Management"
                    android:textSize="32sp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:textColor="@color/colorAccent"/>

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:fillViewport="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TableLayout
                            android:id="@+id/table_report"
                            android:layout_width="1800dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:stretchColumns="0">

                            <TableRow
                                android:background="@drawable/cell_shape_th"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Unit" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Cabang" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Nopol" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Merk" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    style="@style/FontTableHead"
                                    android:text="Type" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Tahun" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Penggerak" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    style="@style/FontTableHead"
                                    android:text="Pemilik" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Expedisi" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Tgl In" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Lama In" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Tgl Sold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Tgl Out" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Ikut Lelang" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTableHead"
                                    android:text="Case" />

                            </TableRow>

                            <TableRow
                                android:background="@drawable/cell_shape_tr_odd"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/unit"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="1" />

                                <TextView
                                    android:id="@+id/cabang"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="SEMARANG" />

                                <TextView
                                    android:id="@+id/nopol"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="H8854JR" />

                                <TextView
                                    android:id="@+id/merk"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="TOYOTA" />

                                <TextView
                                    android:id="@+id/type"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    style="@style/FontTable"
                                    android:text="KIJANG INNOVA 2.0 G MINIBUS AT" />

                                <TextView
                                    android:id="@+id/tahun"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="2010" />

                                <TextView
                                    android:id="@+id/penggerak"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="4X2" />

                                <TextView
                                    android:id="@+id/pemilik"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    style="@style/FontTable"
                                    android:text="SERASI MITRA MOBIL SMG GATOT SUBR" />

                                <TextView
                                    android:id="@+id/expedisi"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="DRIVER" />

                                <TextView
                                    android:id="@+id/tgl_in"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="18 Jul 2017" />

                                <TextView
                                    android:id="@+id/lama_in"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="3" />

                                <TextView
                                    android:id="@+id/tgl_sold"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="-" />

                                <TextView
                                    android:id="@+id/tgl_out"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="-" />

                                <TextView
                                    android:id="@+id/ikut_lelang"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="1" />

                                <TextView
                                    android:id="@+id/cases"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    style="@style/FontTable"
                                    android:text="-" />
                            </TableRow>
                        </TableLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:id="@+id/background_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background ="@color/transparent">
        <com.github.rahatarmanahmed.cpv.CircularProgressView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cpv_thickness="10dp"
            android:layout_centerInParent="true"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />
    </RelativeLayout>
</RelativeLayout>