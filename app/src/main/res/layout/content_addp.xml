<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.ibidsera.view.activity.MainActivity">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pendaftaran Unit"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nopol_title"
                        style="@style/FontTextViewForm"
                        android:text="NO POLISI "/>

                    <EditText
                        android:id="@+id/no_polisi"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style" />

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="STNK AN"/>

                    <EditText
                        android:id="@+id/stnk_an"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="KOTA"/>

                    <EditText
                        android:id="@+id/kota"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        android:id="@+id/merk_title"
                        style="@style/FontTextViewForm"
                        android:text="MERK"/>

                    <Spinner
                        android:id="@+id/merk"
                        style="@style/SpinnerEditForm"/>

                    <TextView
                        android:id="@+id/seri_title"
                        style="@style/FontTextViewForm"
                        android:text="SERI "/>

                    <Spinner
                        android:id="@+id/seri"
                        style="@style/SpinnerEditForm"/>

                    <TextView
                        android:id="@+id/silinder_title"
                        style="@style/FontTextViewForm"
                        android:text="SILINDER "/>

                    <Spinner
                        android:id="@+id/silinder"
                        style="@style/SpinnerEditForm"/>

                    <TextView
                        android:id="@+id/grade_title"
                        style="@style/FontTextViewForm"
                        android:text="GRADE "/>

                    <Spinner
                        android:id="@+id/grade"
                        style="@style/SpinnerEditForm"/>

                    <TextView
                        android:id="@+id/sub_grade_title"
                        style="@style/FontTextViewForm"
                        android:text="SUB GRADE "/>

                    <Spinner
                        android:id="@+id/sub_grade"
                        style="@style/SpinnerEditForm"/>

                    <TextView
                        android:id="@+id/plat_title"
                        style="@style/FontTextViewForm"
                        android:text="PLAT DASAR"/>

                    <Spinner
                        android:id="@+id/plat_dasar"
                        style="@style/SpinnerEditForm"/>

                    <TextView
                        android:id="@+id/transmisi_title"
                        style="@style/FontTextViewForm"
                        android:text="TRANSMISI "/>

                    <EditText
                        android:id="@+id/transmisi"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        android:id="@+id/tahun_title"
                        style="@style/FontTextViewForm"
                        android:text="TAHUN "/>

                    <EditText
                        android:id="@+id/tahun"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"
                        android:inputType="number"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="SUMBER"/>

                    <Spinner
                        android:id="@+id/sumber"
                        style="@style/SpinnerEditForm"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="WARNA DOC"/>

                    <AutoCompleteTextView
                        android:id="@+id/warna_doc"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="LINTAS"/>

                    <CheckBox
                        android:id="@+id/lintas"
                        style="@style/SpinnerEditForm"
                        android:text="YA"
                        android:checked="true"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="TAKSASI APPRAISER"/>

                    <Spinner
                        android:id="@+id/taksasi_appraiser"
                        style="@style/SpinnerEditForm"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="NO RANGKA"/>

                    <EditText
                        android:id="@+id/no_rangka"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="NO MESIN"/>

                    <EditText
                        android:id="@+id/no_mesin"
                        android:text=""
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="NO BPKB"/>

                    <EditText
                        android:id="@+id/no_bpkb"
                        android:text=""
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="NO FAKTUR"/>

                    <EditText
                        android:id="@+id/no_faktur"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="NO STNK"/>

                    <EditText
                        android:id="@+id/no_stnk"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="STNK SD"/>

                    <EditText
                        android:id="@+id/stnk_sd"
                        android:text=""
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="NO KEUR"/>

                    <EditText
                        android:id="@+id/no_keur"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="TGL KEUR"/>

                    <EditText
                        android:id="@+id/tgl_keur"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="MODEL"/>

                    <EditText
                        android:id="@+id/model"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="PENGGERAK"/>

                    <EditText
                        android:id="@+id/penggerak"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="BAHAN BAKAR"/>

                    <EditText
                        android:id="@+id/bahan_bakar"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="KM"/>

                    <EditText
                        android:id="@+id/km"
                        style="@style/SpinnerEditForm"
                        android:hint="0"
                        android:background="@drawable/edittext_style"
                        android:inputType="number"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="WARNA"/>

                    <AutoCompleteTextView
                        android:id="@+id/warna"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="KUNCI TAMBAHAN"/>

                    <EditText
                        android:id="@+id/kunci_tambahan"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="BIAYA ADMINISTRASI"/>

                    <EditText
                        android:id="@+id/biaya_administrasi"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"
                        android:inputType="number"
                        android:hint="0"/>

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="BIAYA PARKIR"
                        android:hint="0"/>

                    <EditText
                        android:id="@+id/biaya_parkir"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style"
                        android:inputType="number"
                        android:hint="0"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Penitip"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama_penitip_title"
                        style="@style/FontTextViewForm"
                        android:text="NAMA "/>

                    <AutoCompleteTextView
                        android:id="@+id/nama"
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style" />

                    <TextView
                        android:id="@+id/kode_anggotahead"
                        style="@style/FontTextViewForm"
                        android:text="Kode Anggota"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/kode_anggota"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/no_npwphead"
                        style="@style/FontTextViewForm"
                        android:text="No NPWP"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/no_npwp"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/no_identitashead"
                        style="@style/FontTextViewForm"
                        android:text="No Identitas"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/no_identitas"
                        android:text=""
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tipehead"
                        style="@style/FontTextViewForm"
                        android:text="Tipe Identitas"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tipe"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/grouphead"
                        style="@style/FontTextViewForm"
                        android:text="Group Biodata"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/group"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/sebagaihead"
                        style="@style/FontTextViewForm"
                        android:text="Sebagai"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/sebagai"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/perusahaanhead"
                        style="@style/FontTextViewForm"
                        android:text="Sebagai Perusahaan"
                        android:visibility="gone"/>

                    <CheckBox
                        android:id="@+id/perusahaan"
                        style="@style/SpinnerEditForm"
                        android:text="YA"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/teleponhead"
                        style="@style/FontTextViewForm"
                        android:text="Telepon / Ponsel"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/telepon"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/alamathead"
                        style="@style/FontTextViewForm"
                        android:text="Alamat"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/alamat"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/kota_penitiphead"
                        style="@style/FontTextViewForm"
                        android:text="Kota"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/kota_penitip"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/kode_poshead"
                        style="@style/FontTextViewForm"
                        android:text="Kode Pos"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/kode_pos"
                        style="@style/SpinnerEditForm"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data PIC"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="NAMA"/>

                    <EditText
                        android:id="@+id/nama_pic"
                        style="@style/SpinnerEditForm"
                        android:text=""
                        android:background="@drawable/edittext_style" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="Ponsel " />

                    <EditText
                        android:id="@+id/ponsel_pic"
                        android:text=""
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"
                        android:inputType="number"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Koordinator Unit"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="16dp"
                android:textSize="24sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="Lokasi Asal Unit"/>

                    <EditText
                        android:id="@+id/lokasi_asal_unit"
                        android:text=""
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/FontTextViewForm"
                        android:text="Nama PIC Display" />

                    <EditText
                        android:id="@+id/nama_pic_display"
                        android:text=""
                        style="@style/SpinnerEditForm"
                        android:background="@drawable/edittext_style"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="16dp"
                    android:id="@+id/btn_save"
                    android:text="Save"
                    android:background="@drawable/button_style"
                    android:textColor="@color/colorPrimary"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="16dp"
                    android:id="@+id/btn_cancel"
                    android:background="@drawable/button2_style"
                    android:text="Cancel" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/background_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background ="@color/transparent">
        <com.github.rahatarmanahmed.cpv.CircularProgressView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cpv_thickness="10dp"
            android:layout_centerInParent="true"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />
    </RelativeLayout>
</RelativeLayout>